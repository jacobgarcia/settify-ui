.credijusto_success {
  padding: 12px 0;
  text-align: center;

  &--message {
    box-sizing: border-box;
    color: var(--color-text);
    font-family: var(--family-sans-serif);
    font-size: 1.125rem;
    font-weight: var(--font-weight-medium);
    line-height: 1;
    padding-bottom: 0;
  }

  &--description {
    font-size: 1rem;
    font-weight: var(--font-weight-regular);
  }

  &--icon {
    color: var(--color-green-400);
  }

  &--action {
    margin-top: 24px;
  }
}
